<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">

        <class>com.example.ma_cnss_spring.Entity.Admin</class>
        <class>com.example.ma_cnss_spring.Entity.Agent</class>
        <class>com.example.ma_cnss_spring.Entity.ConsultationPris</class>
        <class>com.example.ma_cnss_spring.Entity.Document</class>
        <class>com.example.ma_cnss_spring.Entity.DocumentPris</class>
        <class>com.example.ma_cnss_spring.Entity.Dossiermedical</class>
        <class>com.example.ma_cnss_spring.Entity.Medicament</class>
        <class>com.example.ma_cnss_spring.Entity.MedicamentPris</class>
        <class>com.example.ma_cnss_spring.Entity.Patient</class>
        <class>com.example.ma_cnss_spring.Entity.Consultation</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/macnss"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
